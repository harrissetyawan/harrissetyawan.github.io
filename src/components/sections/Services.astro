---
import SectionTitle from "../ui/SectionTitle.astro";
import ServiceCard from "../ui/ServiceCard.astro";
import Section from "./Section.astro";

import c1 from "../../assets/pics/card-pic1.png";
import c2 from "../../assets/pics/card-pic2.png";
import c3 from "../../assets/pics/card-pic3.png";
import c4 from "../../assets/pics/card-pic4.png";
import c5 from "../../assets/pics/card-pic5.png";
import c6 from "../../assets/pics/card-pic6.png";

const cards = [
  {
    index: 1,
    titleTop: "ROI",
    titleBottom: "Calculators",
    img: c1,
    alt: "ROI",
    link: "/calculators/roi",
  },
  {
    index: 2,
    titleTop: "Rental Yield",
    titleBottom: "Calculators",
    img: c2,
    alt: "Rental Yield",
    link: "/calculators/rental-yield",
  },
  {
    index: 3,
    titleTop: "Web",
    titleBottom: "Development",
    img: c3,
    alt: "Web Development",
    link: "/about",
  },
  {
    index: 1,
    titleTop: "Custom",
    titleBottom: "Tools",
    img: c4,
    alt: "Custom Tools",
    link: "/contact",
  },
  {
    index: 2,
    titleTop: "API",
    titleBottom: "Integration",
    img: c5,
    alt: "API Integration",
    link: "/about",
  },
  {
    index: 3,
    titleTop: "Technical",
    titleBottom: "Support",
    img: c6,
    alt: "Technical Support",
    link: "/contact",
  },
];

const description =
  "I build useful tools and web applications. These include";
---

<Section id="services">
  <div class="mt-[140px] mb-5">
    <SectionTitle sectionTitle="What I Build" description={description} />
    <div class="grid lg:grid-cols-2 lg:grid-rows-3 gap-10">
      {
        cards.map((card) => (
          <ServiceCard
            index={card.index}
            titleTop={card.titleTop}
            titleBottom={card.titleBottom}
            img={card.img}
            alt={card.alt}
            link={card.link}
          />
        ))
      }
    </div>
  </div>
</Section>
