---
import MainLayout from "../../layouts/MainLayout.astro";
---

<MainLayout title="Calculators" description="Useful financial calculators">
  <main class="space-y-20 mb-40 pt-24">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <h1 class="text-4xl font-bold mb-8">Financial Calculators</h1>
      <div class="grid gap-8 lg:grid-cols-2">
        <a href="/calculators/roi" class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
          <h2 class="text-2xl font-bold mb-2">Off-Plan ROI Calculator</h2>
          <p class="text-gray-600">Calculate your return on investment for off-plan property purchases in Dubai.</p>
        </a>
        <a href="/calculators/rental-yield" class="block p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-50">
          <h2 class="text-2xl font-bold mb-2">Rental Yield Calculator</h2>
          <p class="text-gray-600">Calculate rental yield for your property investments.</p>
        </a>
      </div>
    </div>
  </main>
</MainLayout>